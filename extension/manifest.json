{
  "manifest_version": 3,
  "name": "TBC Offers Manager",
  "version": "1.0.0",
  "description": "Manage and hide TBC Concept offers with transparency toggle",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://tbcconcept.ge/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://tbcconcept.ge/*/offers*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}


